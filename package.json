{
  "name": "rain",
  "version": "0.1.0",
  "private": true,
  "description": "A background application for rain noise generation.",
  "license": "ISC",
  "keywords": [
    "background",
    "generator",
    "noise",
    "rain"
  ],
  "author": "Kevin Herrera <kevin@herrera.io>",
  "homepage": "./",
  "bugs": {
    "url": "https://github.com/kherge/js.rain/issues"
  },
  "dependencies": {
    "@types/node": "^12.0.0",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "electron-is-dev": "^2.0.0",
    "electron-squirrel-startup": "^1.0.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-scripts": "4.0.3",
    "typescript": "^4.1.2"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.54",
    "@electron-forge/maker-deb": "^6.0.0-beta.54",
    "@electron-forge/maker-rpm": "^6.0.0-beta.54",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.54",
    "@electron-forge/maker-zip": "^6.0.0-beta.54",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "@types/jest": "^26.0.15",
    "concurrently": "^6.0.0",
    "cross-env": "^7.0.3",
    "electron": "12.0.2",
    "wait-on": "^5.3.0"
  },
  "scripts": {
    "build:electron": "npm run build:react && electron-forge package",
    "build:electron:dist": "npm run build:react && electron-forge make",
    "build:react": "react-scripts build",
    "start": "node scripts/start.js",
    "start:electron": "wait-on tcp:3000 && electron-forge start",
    "start:react": "cross-env BROWSER=none react-scripts start",
    "test": "react-scripts test"
  },
  "browserslist": [
    "last 1 electron version"
  ],
  "config": {
    "forge": {
      "packagerConfig": {},
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "rain"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "main": "public/electron.js"
}
